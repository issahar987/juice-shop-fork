pipeline {
    agent any

    triggers {
        // Trigger the pipeline on every push to the repository
        // eo eo 
        githubPush()
    }

    environment {
        REMOTE_HOST = '34.76.3.235'
        REMOTE_USER = 'issah'
        REMOTE_PATH = '/home/issah/juiceshop'
        SSH_CREDENTIALS_ID = 'ssh-key-to-remote-server'
        NODEJS_VERSION = '14'
    }

    stages {
        stage('Check User') {
            steps {
                script {
                    echo "Current user: ${env.USER}"
                    echo "whoami"
                }
            }
        }
        stage('Download Nikto') {
            steps {
                script {
                    try {
                        // Code that may throw an exception
                        echo "running image"
                        sh "docker run --rm sullo/nikto"
                    } catch () {
                        // Handle the exception
                        echo "An exception occurred: ${e.message}"
                        echo "image not working"
                        try{
                            echo "installing..."
                            sh "cd nikto"
                        } catch () {
                            echo "files not found..."
                            sh "git clone https://github.com/sullo/nikto.git"
                            sh "cd nikto"
                        }
                        sh "docker build -t sullo/nikto ."
                        sh "docker run --rm sullo/nikto"
                    }
                }
            }
        }
    }
}
